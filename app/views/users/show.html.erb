<% provide(:title, 'Profile') %>
<div class="profile row">
	<aside>
		<section class="user-profile box-field center-text container">
			<h1>
				<div class="profile-image">
					<%= gravatar_for @user %>
				</div>
				<p><%= @user.name %></p>
			</h1>
			<p><%= @user.email %></p>
		</section>
		<div class="box-field user-panel center-text container">
			<button class="btn btn-xs btn-info">Settings</button>
			<button class="btn btn-xs btn-info">Logout</button>
		</div>
	</aside>
</div>

<div class="challenges box-field">
	<div class="new-challenge-header">
		<h3>Register new challenge:</h3>
		<div class="list-group">
			<div class="list-group-item">
				<form class="form-inline">
				<div class="form-group">
					<label class="sr-only" for="exampleInputEmail3">Team name</label>
					<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Team name">
				</div>
				<div class="form-group">
					<label class="sr-only" for="exampleInputPassword3">Competition link</label>
					<div class="link-input">
						<input type="password" class="form-control link-input-box" id="exampleInputPassword3" placeholder="Competition link">
					</div>
				</div>
				<span class="pull-right">
					<%= button_tag(type: 'submit', class: 'btn btn-default') do %>
						Add
					<% end %>
				</span>
			</form>
			</div>
		</div>
	</div>
	<div class="registered-header">
		<h3>Registered challenges:</h3>
	</div>
	<div class="list-group">
		<% @challenges.each do |c|%>
		<a class="list-group-item clearfix">
			<span class="glyphicon glyphicon-eye-open"></span>
			<%= c.name%>
			<span class="pull-right">
				<button class="btn btn-xs btn-info">Update now</button>
				<button class="btn btn-xs btn-danger">
					<span class="glyphicon glyphicon-trash"></span>
				</button>
			</span>
		</a>
		<% end %>
	</div>
</div>
